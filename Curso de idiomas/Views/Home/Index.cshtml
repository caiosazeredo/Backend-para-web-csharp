@model List<Curso>

<h2>Cursos Disponíveis</h2>

<ul>
    @foreach (var curso in Model)
    {
        <li>
            <strong>@curso.Nome</strong> - @curso.Preco.ToString("C")
            <a href="@Url.Action("Detalhes", new { id = curso.Id })">Ver Detalhes</a>
            <a href="@Url.Action("AdicionarAoCarrinho", new { id = curso.Id })">Comprar</a>
        </li>
    }
</ul>

@if (TempData["Mensagem"] != null)
{
    <p>@TempData["Mensagem"]</p>
}
