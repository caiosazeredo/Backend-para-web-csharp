@model IEnumerable<ExemploMVC.Models.Tarefa>

<h2>Lista de Tarefas</h2>

<table>
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Concluída</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida ? "Sim" : "Não")</td>
                <td>
                    @if (!tarefa.Concluida)
                    {
                        @Html.ActionLink("Concluir", "Concluir", new { id = tarefa.Id })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Adicionar Nova Tarefa</h3>
@using (Html.BeginForm("Adicionar", "Tarefa", FormMethod.Post))
{
    <input type="text" name="descricao" placeholder="Descrição da tarefa" />
    <input type="submit" value="Adicionar" />
}
