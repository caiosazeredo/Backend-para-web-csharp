﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Escola .NET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Escola.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Escola .Net </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Diferenciais">Diferenciais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contato">Contato</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Rodapé -->
    <div class="container" style="height:800px">
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>

    <footer>
        <center>
            <div style="border:solid;border-width:1px; width: 1200px;"></div>
        </center>
        <div class="Base-texto">
            <ul>
                <a class="nav-link text-dark" asp-area="" asp-page=""><H1>Links</H1></a>
                 <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                 <a class="nav-link text-dark" asp-area="" asp-page="/Diferenciais">Diferenciais</a>
                 <a class="nav-link text-dark" asp-area="" asp-page="/Contato">Contato</a>
            </ul>
            <ul>
                <img src="https://www.pulumi.com/logos/tech/dotnet.png" style="width: 10rem;height: 8rem;" alt="">
            </ul>
        </div>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

    </footer>
    <!-- Rodapé -->



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>